@model IList<LeaveMe.ViewModels.CreateUserViewModel>

@{
    ViewBag.Title = "View Users";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>View Users</h4>

<hr />

<div class="datatable_wrapper">
    <table id="dtUsers" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model[0].DisplayID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].DisplayName)
                </th>
                <th>
                    Email
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Mobile)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].WorkTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model[0].Status)
                </th>
                <th>
                   Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mobile)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("View", "Edit", "Profile", routeValues: new { Area = "User", UserID = item.UserID }, htmlAttributes: new { @class = "btn btn-link" })
                    </td>
                </tr>
            }
       </tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $('#dtUsers').DataTable({
            responsive: true
        });
    </script>
}