@model LeaveMe.ViewModels.UsersExperienceViewModel

@{
    ViewBag.Title = "Work Experiences";
    ViewBag.PageHeaderTitle = "Work Experiences";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Previously worked companies 
        <div class="pull-right">
            @Html.ActionLink("Add Work Experience", "Add", "Experience", new { Area = "User", UserID = Model.UserID },
                 htmlAttributes: new { @class = "btn btn-primary btn-xs" })
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="datatable_wrapper">
                    <table id="tblExperiences" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Company
                                </th>
                                <th>
                                    Job Title
                                </th>
                                <th>
                                    Joined Date
                                </th>
                                <th>
                                    Relieved date
                                </th>

                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.UsersExperienceList)
                        {
                            <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Company)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WorkTitle)
                                    </td>
                                    <td>
                                        @item.FromDate.Value.ToString("MMMM dd, yyyy")
                                    </td>
                                    <td>
                                        @item.ToDate.Value.ToString("MMMM dd, yyyy")
                                    </td>

                                    <td>
                                        @Html.ActionLink("View", "Add", "Experience", new { Area = "User", UserID = item.UserID, Id = item.Id },
                        htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                                    </td>
                                </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")

            <script type="text/javascript">
                $('#tblExperiences').DataTable({
                    responsive: true
                });
            </script>
        }
