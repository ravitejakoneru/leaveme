@using LeaveMe.Data.Security;


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Futluz</title>
    @Styles.Render("~/Content/admin")
    @Scripts.Render("~/bundles/modernizr")
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
   

</head>
<body>
  
    @{
        string strSiteMapArea = (User.Roles.Contains(SystemConfig.SYSADMIN) == true) ? "Admin" : "User";
     }
    <!--main theme-->

    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                   @Html.ActionLink("LMS", "Index", "Dashboard", new { Area = strSiteMapArea }, new { @class = "navbar-brand" })
                
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="fa fa-user fa-fw"></i>Hey, @User.DisplayName  <i class="fa fa-caret-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li>
                            <a href="@Url.Action("Edit", "Profile", new { Area = strSiteMapArea })"><i class="fa fa-user fa-fw"></i> User Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-gear fa-fw"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="@Url.Action("LogOut", "Account",new { Area = "" })"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">

                            <!--profile photo-->

                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Dashboard", routeValues: new { Area = strSiteMapArea })"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Edit", "Profile", new { Area = "User", UserID = ViewContext.RouteData.Values["UserID"] })"><i class="fa fa-user fa-fw"></i> Personal Details</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Emergency", "Profile", new { Area = "User", UserID = ViewContext.RouteData.Values["UserID"] })"><i class="fa fa-user-md fa-fw"></i> Emergency Contacts</a>
                        </li>
                        <li>
                            <a href="javascript:void(0);"><i class="fa fa-users fa-fw"></i>Work Experience<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Add", "Experience", new { Area = "User", UserID = ViewContext.RouteData.Values["UserID"] })"><i class="fa fa-shield fa-fw"></i>Add Work Experience </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Experiences", "Experience", new { Area = "User", UserID = ViewContext.RouteData.Values["UserID"] })"><i class="fa fa-shield fa-fw"></i>View Work Experience </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="javascript:void(0);"><i class="fa fa-graduation-cap fa-fw"></i>Qualification<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Add", "Qualification", new { Area = "User", UserID = ViewContext.RouteData.Values["UserID"] })"><i class="fa fa-shield fa-fw"></i>Add Qualification </a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Qualifications", "Qualification", new { Area = "User", UserID = ViewContext.RouteData.Values["UserID"] })"><i class="fa fa-shield fa-fw"></i>View Qualifications </a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="@Url.Action("Documents", "Profile", new { Area = "User", UserID = ViewContext.RouteData.Values["UserID"] })"><i class="fa fa-graduation-cap fa-fw"></i> Documents</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Manage", "Reporting", new { Area = "User", UserID = ViewContext.RouteData.Values["UserID"] })"><i class="fa fa-graduation-cap fa-fw"></i> Reporting To</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h4 class="page-header">@ViewBag.PageHeaderTitle</h4>

                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            
            <!-- /.container-fluid -->
        </div>
        <!-- End Page Content -->
    </div>
    <!-- end main theme-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
