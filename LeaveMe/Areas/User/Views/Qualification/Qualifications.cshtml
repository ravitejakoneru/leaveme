@model LeaveMe.ViewModels.UsersEducationViewModel

@{
    ViewBag.Title = "Education Qualifications";
    ViewBag.PageHeaderTitle = "Education Qualifications";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Education Qualifications
        <div class="pull-right">
            @Html.ActionLink("Add Qualification", "Add", "Qualification", new { Area = "User", UserID = Model.UserID },
                 htmlAttributes: new { @class = "btn btn-primary btn-xs" })
        </div>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="datatable_wrapper">
                    <table id="tblEducations" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                   Institute
                                </th>
                                <th>
                                    Course
                                </th>
                                <th>
                                    Starting Period
                                </th>
                                <th>
                                    Endig Period
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UsersEducationList)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Institute)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CourseSpecialization)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.StartPeriod)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EndPeriod)
                                    </td>
                                    <td>
                                        @Html.ActionLink("View", "Add", "Qualification", new { Area = "User", UserID = item.UserID, Id = item.Id },
                                        htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>